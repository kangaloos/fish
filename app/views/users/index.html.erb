<div class = "row">
  <div class = "col-md-3">
    <%= render 'books/index', book: @newbook, user: current_user %>
  </div>
  <div class = "col-md-8 offset-md-1">
    <h1>Users</h1>
    <table class="table">
      <tr>
        <th>image</th>
        <th>name</th>
        <th></th>
      </tr>
      <% @users.each do |user| %>
        <tr>
          <td>
          <%= link_to user_path(user) do %>
          <%= image_tag user.get_profile_image %>
          <% end %>
          </td>
          <td><%= user.name %></td>
          <td><%= link_to "Show",user_path(user.id) %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>


