<%= search_form_for @q, url: user_path do |f| %>
   <%= f.search_field :title_or_body_cont, class: 'form-control', placeholder: '検索ワード' %>
   <%= f.submit '検索', class: 'btn btn-primary' %>
<% end %>

<div class = "row">
  <div class = "col-md-3">
    <%= render 'users/user_info', user: @user %>
    <h2>新規投稿</h2>
    <%= render 'points/form', point: @newpoint %>
  </div>
  <div class = "col-md-8 offset-md-1">
    <h1>投稿一覧</h1>
    <%= render 'points/points', points: @points , user: @user %>
  </div>



</div>



