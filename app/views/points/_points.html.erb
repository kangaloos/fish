<table class="table">
  <tr>
    <th></th>
    <th>タイトル</th>
    <th>コメント</th>
  </tr>
  <% points.each do |point| %>
    <tr>
      <td>
        <%= link_to user_path(point.user) do %>
          <%= image_tag point.user.get_profile_image %>
        <% end %>
      </td>
      <td><%= link_to point.title, point_path(point.id) %></td>
      <td><%= point.body %></td>
    </tr>
  <% end %>
</table>