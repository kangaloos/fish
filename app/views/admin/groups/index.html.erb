<h1>グループコメント管理</h1>
<table class="table">
  <thead>
    <tr>
      <th>投稿名</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= group.name %></td>
        <td>
          <%= link_to "削除", admin_group_path(group), method: :delete,
                              data: { confirm: "本当に削除しますか？" },
                              class: "btn btn-outline-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>