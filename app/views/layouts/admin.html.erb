<!DOCTYPE html>
<html>
<head>
  <title>Admin - Meshiterro</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>
<body>
  <header class="shadow-sm">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <a class="navbar-brand p-3" href="/admin"><i class="fa-solid fa-fish-fins"></i>AdminConsole | 釣り情報サイト</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                      aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav ml-auto">
            <% if admin_signed_in? %>
              <li class="nav-item">
                <%= link_to admin_root_path, class: 'nav-link text-light' do  %>
                 <i class="fas fa-home"></i>users
                <% end %>
              </li>
              
              <li class="nav-item">
                <%= link_to admin_points_path, class: 'nav-link text-light' do  %>
                 <i class="fas fa-home"></i>points
                <% end %>
              </li>
                  <li class="nav-item">
                <%= link_to admin_post_comments_path, class: 'nav-link text-light' do  %>
                 <i class="fas fa-home"></i>comments
                <% end %>
              </li>
              
              <li class="nav-item">
                <%= link_to admin_groups_path, class: 'nav-link text-light' do  %>
                 <i class="fas fa-home"></i>groups
                <% end %>
              </li>   
              
              <li class="nav-item">
                <%= link_to destroy_admin_session_path, method: :delete, class: 'nav-link text-light' do %>
                  <i class="fas fa-sign-out-alt"></i>Log out
                <% end %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>
  </header>
  
  <div class="container mt-5">
    <%= render "layouts/flash_messages" %>
    <%= yield %>
  </div>
</body>
</html>